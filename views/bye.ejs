<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <title>Event Page</title>
    <style>
      body {
        background: linear-gradient(
          45deg,
          rgba(7, 1, 1, 1),
          rgba(41, 41, 41, 1)
        );
        color: white;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        opacity: 0;
        animation: fadeIn 2s ease-in-out forwards;
      }

      @keyframes fadeIn {
        0% {
          opacity: 0;
        }
        100% {
          opacity: 1;
        }
      }

      .container {
        text-align: center;
        opacity: 0;
        animation: slideIn 2s ease-in-out forwards;
      }

      @keyframes slideIn {
        0% {
          opacity: 0;
          transform: translateY(-50px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .closed-message {
        margin-bottom: 30px;
      }

      h2 {
        font-size: 36px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
      }

      p {
        font-size: 18px;
      }

      #countdown {
        font-size: 24px;
        font-weight: bold;
        color: #ffc107;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
        margin-top: 20px;
      }

      .back-home-button {
        display: block;
        margin: 30px auto 0;
        background-color: #007bff;
        color: white;
        padding: 12px 25px;
        font-size: 18px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
      }

      .back-home-button:hover {
        background-color: #0056b3;
        transform: scale(1.05);
      }

      .celebration-message {
        font-size: 36px;
        font-weight: bold;
        color: #28a745;
        margin-top: 30px;
        animation: rotateScale 2s ease-in-out infinite alternate;
        display: none;
      }

      @keyframes rotateScale {
        0% {
          transform: rotate(0deg) scale(1);
        }
        100% {
          transform: rotate(360deg) scale(1.2);
        }
      }

      .party-countdown h5 {
        font-size: 24px;
        margin-top: 20px;
      }

      #partyCanvas {
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        opacity: 0.2; /* Start with low opacity */
        transition: opacity 2s ease-in-out;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="closed-message">
        <h2>The voting site is now closed</h2>
        <p>Thank you for your participation!</p>
      </div>

      <div class="party-countdown">
        <h5>Countdown to the Party ðŸŽ‰ðŸŽŠ</h5>
        <div id="countdown"></div>
      </div>

      <div id="celebration" class="celebration-message">
        Let the party begin!
      </div>

      <a href="/" class="btn back-home-button">Back to Homepage</a>
    </div>

    <canvas id="partyCanvas"></canvas>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
      var countdownDate = new Date("July 27, 2024 18:00:00").getTime();

      var x = setInterval(function () {
        var now = new Date().getTime();
        var distance = countdownDate - now;

        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours = Math.floor(
          (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
        );
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

        document.getElementById("countdown").innerHTML =
          days + "d " + hours + "h " + minutes + "m " + seconds + "s ";

        if (distance < 0) {
          clearInterval(x);
          document.getElementById("countdown").innerHTML = "EXPIRED";
          document.getElementById("celebration").style.display = "block";
          document.getElementById("partyCanvas").style.display = "block";
          document.getElementById("partyCanvas").style.opacity = 1; // Make party scene fully visible
          startParty();
        }
      }, 1000);

      function startParty() {
        var canvas = document.getElementById("partyCanvas");
        var ctx = canvas.getContext("2d");
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        // Function to draw confetti
        function drawConfetti() {
          ctx.clearRect(0, 0, canvas.width, canvas.height);
          for (var i = 0; i < 100; i++) {
            ctx.beginPath();
            ctx.arc(
              Math.random() * canvas.width,
              Math.random() * canvas.height,
              Math.random() * 5 + 2,
              0,
              Math.PI * 2
            );
            ctx.fillStyle = `hsl(${Math.random() * 360}, 100%, 50%)`;
            ctx.fill();
          }
          requestAnimationFrame(drawConfetti);
        }

        drawConfetti();

        // Function to draw dancing figures
        function drawDancingFigures() {
          ctx.clearRect(0, 0, canvas.width, canvas.height);
          for (var i = 0; i < 10; i++) {
            let x = Math.random() * canvas.width;
            let y = Math.random() * canvas.height;
            let size = Math.random() * 20 + 10;
            let angle = Math.random() * Math.PI * 2;
            ctx.beginPath();
            ctx.arc(x, y, size, 0, Math.PI * 2);
            ctx.fillStyle = `hsl(${Math.random() * 360}, 100%, 70%)`;
            ctx.fill();
            ctx.strokeStyle = "white";
            ctx.lineWidth = 2;
            ctx.stroke();
            // Animation logic
            ctx.save();
            ctx.translate(x, y);
            ctx.rotate(angle);
            ctx.fillStyle = `hsl(${Math.random() * 360}, 100%, 70%)`;
            ctx.fillRect(-size / 2, -size / 2, size, size);
            ctx.restore();
          }
          requestAnimationFrame(drawDancingFigures);
        }

        drawDancingFigures();
      }
    </script>
  </body>
</html>
